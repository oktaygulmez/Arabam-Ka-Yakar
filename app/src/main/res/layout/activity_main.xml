<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/baslikText"
        android:layout_width="299dp"
        android:layout_height="51dp"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="29dp"
        android:text="Arabam Kaç Yakar?"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/yakitortText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <Button
        android:id="@+id/buton"
        android:layout_width="318dp"
        android:layout_height="75dp"
        android:layout_marginBottom="192dp"
        android:onClick="hesapla"
        android:text="Hesapla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/yakitFiyatText"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="Güncel Yakıt Fiyatı"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.801"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yakitortText" />

    <EditText
        android:id="@+id/yakitortText"
        android:layout_width="233dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="Yakıt Ortalaması (100 km)"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/kmText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baslikText" />

    <EditText
        android:id="@+id/kmText"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Başlangıç ve Bitiş Noktası Uzaklık"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.801"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yakitortText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="67dp"
        android:layout_height="55dp"
        android:text="Ortalama Yakıt Tüketimi : "
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="160dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="74dp"
        android:layout_height="42dp"
        android:text="Gideceğin Yol Km :"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yakıt Fiyatı : "
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="320dp" />

    <TextView
        android:id="@+id/sonucText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="380dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonuç : "
        android:textSize="20sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="380dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="166dp"
        android:layout_height="21dp"
        android:text="Kilometrede Kaç Yakar : "
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="427dp" />

    <TextView
        android:id="@+id/kmKacYakarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="427dp" />

</androidx.constraintlayout.widget.ConstraintLayout>